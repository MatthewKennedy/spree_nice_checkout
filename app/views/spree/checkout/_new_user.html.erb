<div class="panel panel-default">
    <div class="panel-heading">
      <h3 style=" margin-top: 0;margin-bottom: 15px;"><%= Spree.t(:create_a_new_account) %></h3>
    </div>
    <div id="new-customer" class="panel-body" data-hook="login">
      <%= form_for @user, :as => :spree_user, html: { autocomplete: "off" }, :url => spree.registration_path(@user) do |f| %>
        <div data-hook="signup_inside_form has-float-label">
          <%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
          <p><%= f.submit Spree.t(:create), :class => 'btn btn-lg btn-default btn-block' %></p>
        </div>
      <% end %>
      <div data-hook="login_extras"></div>
    </div>
  </div>
