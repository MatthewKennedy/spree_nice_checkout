<% @body_id = 'checkout-signup' %>
<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>
<div id="registration" class="col-12 text-center" data-hook='registration_wrapper'>
    <h1><%= Spree.t(:account) %></h1>
   <div class="row  <% if Spree::Config[:allow_guest_checkout] == false %>center <% end %>">
    <div class="col-12 col-md-6">
      <div class="spree-well">
        <%= render :partial => 'login' %>
      </div>
    </div>
  <div class="col-12 hide-md">
    <h3>- <%= Spree.t(:or)%> -</h3>
  </div>
    <div class="col-12 col-md-6" id="account">
      <div class="spree-well">
        <%= render :partial => 'new_user' %>
      </div>
    </div>
    <% if Spree::Config[:allow_guest_checkout] %>
      <div class="col-12 col-md-6 text-center">
        <div class="panel panel-default">
          <div class="panel-heading">
          <hr class="hide-md">
            <h3 class="panel-title"><%= Spree.t(:guest_user_account) %></h3>
          </div>
          <div id="guest_checkout" class="panel-body" data-hook>
            <%= form_for @order, :url => update_checkout_registration_path, :method => :put, :html => { :id => 'checkout_form_registration' } do |f| %>
              <p class="form-group has-float-label">
                <%= f.email_field :email, :class => 'form-control title', :placeholder => Spree.t(:email) %>
                <%= f.label :email do %>
                 <%= Spree.t(:email) %><abbr class="required" title="required">*</abbr>
                <% end %>
              </p>
              <p><%= f.submit Spree.t(:continue), :class => 'btn btn-lg btn-success btn-block' %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
</div>
